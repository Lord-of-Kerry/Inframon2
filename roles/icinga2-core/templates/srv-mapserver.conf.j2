# {{ ansible_managed }}

{% for item in groups['mapserver'] %}

object Host "{{ item }}" {
  import "generic-host"
  address = "{{ hostvars[item].ansible_ssh_host }}"
  check_command = "hostalive"
  vars.sla = "24x7"
}

object Service "CPU load" {
  import "generic-service"
  host_name = "{{ item }}"
  check_command = "nrpe"
  vars.nrpe_command = "check_load"
  vars.sla = "24x7"
}

